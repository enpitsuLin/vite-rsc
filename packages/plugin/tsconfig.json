{
  "compilerOptions": {
    "target": "es2022",
    "jsx": "react-jsx",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "rootDir": "src",
    "customConditions": [
      "source"
    ],
    "module": "preserve",
    "moduleResolution": "Bundler",
    "resolvePackageJsonImports": true,
    "types": [
      "node",
      "vite/client"
    ],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}
